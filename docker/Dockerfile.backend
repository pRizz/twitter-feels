# Backend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies for better-sqlite3
RUN apk add --no-cache python3 make g++

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy built source
COPY dist ./dist
COPY src/db/schema.sql ./src/db/

# Create data directory
RUN mkdir -p data

EXPOSE 3001

CMD ["node", "dist/index.js"]
